@model IEnumerable<SAOnlineMart.Models.ProductsDTO>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Manage Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2>Admin Panel</h2>
        <a href="/Admin/Create" class="btn btn-primary mb-3">Add New Product</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)

                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>R @product.Price</td>
                        <td>
                            <a href="/Admin/Edit/@product.Id" class="btn btn-warning">Edit</a>
                            <a href="/Admin/Delete/@product.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>